@import "_variable.less";
.header{
	.nav_bar{
		background:#F6F6F6;
		border-bottom:@bd-grey;
		height:29px;
		line-height:29px;
		
		.user_nav,.more_nav{
			float:right;
		}
		.site_nav{
			float:left;
		}
		.more_nav{
			span{
				color:#D0D0D0;
				margin:0 20px;
			}
			
		}
		.user_nav{
			.popover{
				max-width:none;
				background:rgba(0,0,0,.3);
				padding:3px;
				.popover-title{
					display:none;    
				}
				.popover-content{
					padding:0px;
				}
				&.bottom{
					.arrow:after{
						border-bottom-color:#aaa;
						border-bottom-color:#fff\0;
						border-bottom-color:#aaa\9\0;
						
					}
				}
			}
			.yy_panel{
				zoom:1;
				.con{
					padding:5px;
					width:320px;
					overflow:hidden;
					background:#fff;
					position:relative;
					.upload{
						display:block;
						width:24px;
						height:18px;
						cursor:pointer;
						position:absolute;
						.icons(-165px,-37px);
						filter:alpha(opacity=35);opacity:.35;
						right:15px;
						top:75px;
						z-index:999;
						&:hover{
							filter:alpha(opacity=100);opacity:1;
						}
						#upload{
							filter:alpha(opacity=0);
							opacity:.0;
							position:absolute;
							left:-9999em;
							
						}
					}
					#preview{
						display:none;
						cursor:pointer;
						position:absolute;
						width:45px;
						height:45px;
						top:50px;
						right:10px;
						overflow:hidden;
						z-index:999;
						img{
							height:45px;
							width:auto;
						}
					}
				}
				textarea{
					padding:5px;
					resize:none;
					width:100%;
					height:95px;
					*width:310px;
				}
				input{
					font-weight:bold;
					margin-top:8px;
					float:right;
				}
			}
			.reg{
				//display:none;
			}
			.sign_in{
				//display:none;
				a{
					margin-left:15px;
				}
				.name{
					color:@light-black;
					margin-left:0;
				}
				.exit,.yy{
					.ib;
					width:20px;
					height:20px;
					filter:alpha(opacity=60);
					opacity:.6;
					vertical-align:middle;
					margin-left:10px;
					&:hover{
						filter:alpha(opacity=100);
						opacity:1;
					}
				}
				.exit{
					.icons(-223px,-35px);
				}
				.yy{
					.icons(-198px,-35px);
				}
			}
		}
	}
	.nav{
		height:55px;
		line-height:55px;
		background:#fff;
		border-bottom:@bd-green;
		margin-bottom:0;
		.site_nav{
			float:left;
			position:relative;
			i{
				position:absolute;
				bottom:2px;
				*bottom:0;
				left:0;
				height:3px;
				width:0;
				
				-webkit-transition:all 0.3s ease;
				-moz-transition:all 0.3s ease;
			}
			a{
				color:#333333;
				font-size:18px;
				margin-right:24px;
				*margin-right:22px;
				text-decoration:none;
				.ib;
			}
		}
		.search_bar{
			float:right;
			position:relative;
			.txt{
				background:#F2F2F2;
				width:256px;
				margin-bottom:0;
				font-size:13px;
			}
			button{
				position:absolute;
				right:0;
				border:none;
				filter:alpha(opacity=50);
				opacity:.5;
				top:18px;
				background:none;
			}
		}
	}
}