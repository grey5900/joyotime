@import "_variable.less";
*html{
	
	input.txt{
		 border: 1px solid #CCCCCC;
	}
	img{
		_width:100%;
	}
	i{
		display:inline;zoom:1;
	}
	.active{
		background-color:transparent;
	}
	.fade.in{
		filter:alpha(opacity=100);
	}
	.popover{
		.arrow{
			display:none;
		}
	}
	.column{
		.module{
			margin-bottom:20px;
		}
		.article{
			width:700px;
			
		}
		.side{
			width:280px;
			margin-left:20px;
			.con{
				background-color:#FFF;
				padding:10px 10px 0;
			}
			.module{
				border-bottom:@bd-grey;
			}
		}
		.bd{
			.article{
				width:678px;
			}
		}
	}
	.modal-backdrop{
		width:100%;
		height:100%;
		position:absolute;
	}
	#modal{
		input{
			border:1px solid #ccc;
			width:95%;
		}
		.checkbox{
			input{
				border:none;
				width:auto;
				margin-left:-20px;
			}
		}
	}
	#signin-modal{
		.btns{
			input{
				border:none;
				width:auto;
			}
		}
	}
	.header{
		.nav{
			.site_nav{
				a.active{
					background:transparent;
				}
				i{
					font-size:0;
					bottom:-1px;
				}
			}
		}
	}
	.search_bar{
		.txt{
			margin-top:15px;
		}
		button{
			i{
				width:22px;
				background-image:url("../bootstrap/img/glyphicons-halflings-8.png");
				.bgp(-48px,0);
				
			}
		}
	}
	.timeline{
		.article{
			width:685px;
			float:left;
		}
		.side{
			width:280px;
			display:inline;
			float:left;
		}
	}
	.list-fluid{
		li{
			float:left;
			margin:15px 0;
			width:325px;
			overflow:hidden;
			.box{
				width:325px !important;
				overflow:hidden;
				hr{
					width:325px;
				}
				.list{
					width:325px;
					overflow:hidden;
					li{
						width:295px;
						overflow:hidden;
						margin:0;
					}
				}
			}
		}
	}
	.detail{
		.lord{
			.article{
				.con{
					li{
						overflow:hidden;
						div{
							height:91px;
							float:left;
							overflow:hidden;
						}
						.address{
							margin-top:20px;
						}
					}
				}
			}
		}
		
	}
	.channel{
		.tg{
			.primary{
				.info{
					li{
						div{
							display:inline;
							zoom:1;
							line-height:1.5;
							vertical-align:middle;
							margin-top:10px;
						}
						.btn{
							margin-top:10px;
						}
					}
				}
			}
			.sub{
				li{
					.img{
						height:110px;
					}
				}
			}
		}
	}
} 