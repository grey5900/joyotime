/* 资讯详情 */
.article {
  border-top: 2px solid #d63333;
  border-left: 1px solid #e6e6e6;
  border-right: 1px solid #e6e6e6;
  border-bottom: 1px solid #e6e6e6;
  background: #fff;
  color: #666;
  margin: 0 0 20px 0;
  .art-title {
    text-align: center;
    line-height: 20px;
    border-bottom: 1px solid #e6e6e6;
    padding-bottom: 10px;
    h1 {
      font-size: 22px;
      margin-bottom: 0px;
    }
    .cfrom {
      font-size: 12px;
      color: #aaa;
      span {
        margin: 0 10px 0 0;
      }
    }
  }
  .art-content {
    padding: 20px;
    .mid {
      text-align: center;
      margin-bottom: 20px;
    }
    .contxt {
      img {
        width: 580px;
      }
      p {
        font-size: 14px;
        line-height: 22px;
        margin: 0 10px;
      }
    }
    .tags {
      float: left;
      padding-left: 5px;
      height: 30px;
      line-height: 30px;
      overflow: hidden;
      li {
        line-height: 20px;
        margin: 4px 5px 0 0;
        padding: 0 10px;
        display: inline-block;
        .ie7-inline-block();
        border: 1px solid #e1e1e1;
        border-radius: 99px;
        background: #ffffff;
      }
    }
    .conend {
      margin: 40px 0 20px;
      border-bottom: 1px solid #e6e6e6;
      .clearfix();
      .pagination {
        float: left;
      }
      .ckepop {
        margin-top: 30px;
        float: right;
        color: #aaa;
      }
    }
    .next-page {
      margin-bottom: 20px;
      .clearfix();
      a{
        color: #666;
      }
    }
  }
  .tit {
    height: 33px;
    line-height: 33px;
    background: #eee;
    padding-left: 18px;
    zoom: 1;
    h2 {
      padding: 0px;
      margin: 0 10px 0 0;
      font-weight: normal;
      font-size: 18px;
      line-height: 33px;
      float: left;
      .cleartype();   
    }
    .breadcrumbs {
      float: right;
    }
  }
  .con {
    padding: 15px 14px;
    ul {
      margin: 0 0 0 -15px;
      .clearfix();
    }
    li {
      float: left;
      width: 100px;
      margin-left: 14px; 
      img {
        height: 100px;
        width: 100px;
      }
      a {
        font-size: 12px;
        line-height: 16px;
      }
    }
  }
}