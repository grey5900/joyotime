<div id="{$page_id}">
<form id="pagerForm" method="post" action="#rel#">
	<input type="hidden" name="pageNum" value="{$cur_page}" />
	<input type="hidden" name="numPerPage" value="{$per_page_num}" />
	<input type="hidden" name="orderField" value="{$orderField}" />
	<input type="hidden" name="orderDirection" value="{$orderDirection}" />
	<input type="hidden" name="keywords" value="{$keywords}" />
</form>

<div class="pageContent">
	<div class="panelBar">
		<ul class="toolBar">
			<li><a class="add" href="/home2014/add/user" title="添加达人" target="dialog" width="650" height="400" rel="{$page_id}_add"><span>添加</span></a>
			<li><a class="edit" href="/home2014/edit/user/<!--{{id}}-->" warn="请选择需要修改的记录" title="修改达人" target="dialog" width="650" height="400" rel="{$page_id}_edit"><span>修改</span></a>
			<li><a class="delete" href="/home2014/del/user/<!--{{id}}-->" warn="请选择需要删除的记录" title="你确定要删除？" target="ajaxTodo"><span>删除</span></a></li>
		</ul>
	</div>

	<div layoutH="78">
	<table class="list" width="100%" targetType="navTab" asc="asc" desc="desc">
		<thead>
			<tr>
				<th width="10%">ID</th>
				<th width="25%">图片</th>
				<th width="25%">连接到</th>
				<th width="15%">过期时间</th>
				<th width="15%">添加时间</th>
				<th width="10%">权重</th>
			</tr>
		</thead>
		<tbody>
			{loop $list $key $val}
			<tr target="id" rel="{$val['id']}">
				<td>{$val['id']}</td>
				<td>
				<a href="{echo image_url($val['image'],'head','odp');}" class="image_show">
				<img src="{echo image_url($val['image'],'head','odp');}"  width="80" />
				</a></td>
				<td>{$val['hyperLink']}</td>
				<td>{$val['expireDate']}</td>
				<td>{$val['createDate']}</td>
				<td><input type="text" size="10" onfocus="modify_rank2(this, 'HomePageDataBase', '{$val['id']}', 'rankOrder')" value="{$val['rankOrder']}" name="rank_order" /></td>
			</tr>
			{/loop}
		</tbody>
	</table>
	</div>
    <!--{template main/page_bar}-->
<script type="text/javascript">
	$(function(){
		$("a.image_show", "#{$page_id}").fancybox();
	});
</script>
</div>
</div>
