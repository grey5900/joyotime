<div class="pageContent">
    <div class="tabs">
        <div class="tabsHeader">
            <div class="tabsHeaderContent">
                <ul>
                    <li>
                        <a href="javascript:;"><span id="recommend_breadcrumb">推荐数据</span></a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="tabsContent">
            <div>
                <div layoutH="40" style="float:left; display:block; overflow:auto; width:240px; border:solid 1px #CCC; line-height:21px; background:#fff">
                    <ul class="tree treeFolder" id="recommend_tree">
                        <!--{loop $tree $row}-->
                        <li>
                            <a href="{eval echo site_url(array('recommend', 'data_page', 'id', $row['self']['id']))}" title="{$row['self']['name']}" target="ajax" rel="fragment_data">{$row['self']['name']}</a>
                            <!--{if $row['children']}-->
                            <ul>
                                <!--{loop $row['children'] $r}-->
                                <li>
                                    <a href="{eval echo site_url(array('recommend', 'data_page', 'id', $r['id']))}" title="{$row['self']['name']} - {$r['name']}" target="ajax" rel="fragment_data">{$r['name']}</a>
                                </li>
                                <!--{/loop}-->
                            </ul>
                            <!--{/if}-->
                        </li>
                        <!--{/loop}-->
                    </ul>
                </div>
                <div id="fragment_data" class="unitBox" style="margin-left:246px;">
                    
                </div>
            </div>
        </div>
        <div class="tabsFooter">
            <div class="tabsFooterContent"></div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $("#recommend_tree a").click(function(){
        $("#recommend_breadcrumb").text("推荐数据 - " + $(this).attr("title"));
    });
</script>