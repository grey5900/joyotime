//
// Mobile Reset CSS
// --------------------------------------------------

/* ==========================================================================
   基本样式：默认值
   ========================================================================== */
* {
  -webkit-tap-highlight-color:rgba(0,0,0,0);
  outline: none;
  margin: 0px;
  padding: 0px;
  list-style: none;
}
html,
button,
input,
select,
textarea {
    color: #666;
}

body {
  font: normal 100% Helvetica, Arial, sans-serif;
  line-height: 1.4;
  background: #fff;
}

a {
    color: #666;
    font-size: 1em;
    text-decoration: none;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    -webkit-user-drag: none;
}

a:visited {
    color: #666;
}

a:hover {
    color: #666;
}
span {
  font-size: 1em;
}
h1 {
  font-size: 1.5em;
  color: #666;
}
h2 {
  font-size: 1.75em;
}
h3 {
  font-size: 16px;
}
p {
  font-size: 0.875em;
  color: #666;
}
em {
  font-style: normal;
}
body, div, span, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, code,
del, dfn, em, img, q, dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, dialog, figure, footer, header,
hgroup, nav, section {
  margin: 0;
  padding: 0;
  border: 0;
}
li {
  list-style: none;
}

// =========================================
body {
  width: 100%;
}
.container-wap {
  margin: 0 auto;
  width: 320px;
  display: block;
}

.header {
  margin: 20px 10px;
}
.logo {
  float: left;
  display: inline-block;
  margin-right: 10px;
  img {
    width: 60px;
    height: 60px;
    display: block;
  }
}
.subtitle {
  h3 {
    font-size: 32px;
    line-height: 32px;
    color: #333;
    font-weight: no;
  }
  p {
    font-size: 1em;
    color: #333;
    line-height: 32px;
  }
}

.content {
  a.btn-bar {
    color: #fff;
    background: #fe4539;
    font-size: 1.3em;
    line-height: 30px;
    text-align: center;
    width: 100%;
    text-decoration: none;
    margin-bottom: 20px;
    display: block;
    padding: 15px 0;
    cursor: pointer;
    &:hover {
      background: #00b6c0;
      text-decoration: none;
    }
  }
  p {
    font-size: 1em;
    color: #333;
    margin: 10px;
  }
}
