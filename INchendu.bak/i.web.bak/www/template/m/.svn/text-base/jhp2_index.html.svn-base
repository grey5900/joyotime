              success:function(json){
                if(json.code == -1) {
                      window.mobile && window.mobile.login ? window.mobile.login() : alert('请先登录IN成都！');
                }else if(json.code == 0){//报名成功
                  alert('报名成功，下一步');
                  var num = new Number($("#joins_num").html());
                  num = num + 1;
                  $("#joins_num").html(num);
                }else if(json.code == 1){
                  alert('真抱歉！报名的人太多了，请稍后再试试');
                }else if(json.code == 2){
                  alert('您已经报名参与了这个活动');
                }else if(json.code == 3){
                  alert('真抱歉！这个活动已停止报名了');
                }else if(json.code == 4){
                  alert('对不起！请您先登录');
                }else{//系统错误了
                  alert('真抱歉！这个活动已停止报名了');
                }
              }
            });
          });

