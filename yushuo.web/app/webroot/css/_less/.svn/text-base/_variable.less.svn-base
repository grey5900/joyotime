/**theme**/
@green: #4db5a4;

@gray: #f5f5f3;
@gray-dark: #333;
@gray-light: #aaa;

@orange: #fe8B46;
/*border*/
@dot:1px dotted #D9D9D9;
@bd-grey:1px solid @gray;

.bd(@width:1px 0 0 0,@style:solid,@color:@gray){
	border-width:@width;
	border-style:@style;
	border-color:@color;
}
.bd-pic{
	height:4px;
	line-height:4px;
	border:none;
	margin:15px 0;
	.ico(0,bottom);
	background-repeat:repeat-x;
}
/**
 * font-color
 * 
 **/
@font-green:#b5dcd5;

/**font-style**/
.t14{
	font:bold 14px/18px "\5B8B\4F53";
}
.t16{
	font:bold 16px/18px "\5B8B\4F53";
}

/**clear**/
.clearfix{
	zoom:1;
	&:after{clear:both;content:'.';height:0;line-height:0;display:block;visibility:hidden;}
}

/**layout**/
.ie7-inline-block {
	display:inline-block;
	*zoom:1;
	_display:inline;
}
.conter {
  text-align: center;
}
.vm{
	display:table-cell;
	vertical-align:middle;
}
.mask(@n){
	position:absolute;
	width:100%;
	height:100%;
	background:#000;
	filter:alpha(opacity=@n);
	opacity:@n/100;
	left:0;
	z-index:1;
}
.fadeOut(@from,@to){
	margin:0;
	border:none;
	height:2px;
	background:@from;
	background:-webkit-linear-gradient(left,@from,@to);
	background:-moz-linear-gradient(left,@from,@to);
	background:-o-linear-gradient(left,@from,@to);
	background:-ms-linear-gradient(left,@from,@to);
	background:linear-gradient(left,@from,@to);
	
}
.tansition(@pro,@type,@time){
	-webkit-transition:@pro,@type,@time;
	-moz-transition:@pro,@type,@time;
	-ms-transition:@pro,@type,@time;
	-o-transition:@pro,@type,@time;
	transition:@pro,@type,@time;
}

/**avatar,icon**/
.avatar(@n){
	width:@n;
	height:@n;
	border-radius:3px;
	//behavior:url(js/pie.htc);
}
.icons(@x,@y){
	background:url(/img/icons.png) no-repeat @x @y;
}
.ico(@x,@y){
	background:url(/img/ico.png) no-repeat @x @y;
}
.bgp(@x,@y){
	background-position:@x @y;
}
.bg(@url){
	background:@url;
}

