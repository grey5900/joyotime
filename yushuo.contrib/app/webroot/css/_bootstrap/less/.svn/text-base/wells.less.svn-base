//
// Wells
// --------------------------------------------------


// Base class
.well {
  min-height: 20px;
  padding: 9px 19px;
  margin-bottom: 20px;
  background-color: @well-bg;
  border: 1px solid darken(@well-bg, 7%);
  border-radius: @border-radius-base;
  display: inline-block;
  //.box-shadow(inset 0 1px 1px rgba(0,0,0,.05));
  blockquote {
    border-color: #ddd;
    border-color: rgba(0,0,0,.15);
  }
  h3 {
    color: #333;
    font-size: 16px;
    line-height: 30px;
    display: inline-block;
    .ie7-inline-block();
  }
  .detail {
    color: #666;
    font-size: 12px;
    line-height: 30px;
    display: inline-block;
    .ie7-inline-block();
  }
  .overlay {
    display: inline-block;
    .ie7-inline-block();
    float: right;
  }

}

// Sizes
.well-large {
  //padding: 24px;
  //border-radius: @border-radius-large;
  display: block;
  margin-right: 20px;
}
.well-small {
  padding: 5px 9px;
  //border-radius: @border-radius-small;
  display: block;
}

