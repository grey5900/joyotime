.header {
  width: 100%;
  height: 144px;
  border-bottom: 1px solid @gray-light;
  background: #fff;
  display: block;
}

.site-nav {
  color: #666;
  line-height: 45px;
  float: left;
  .inline-block();
  a {
    font-size: 14px;
    padding: 0 10px;
    line-height: 45px;
    &:hover {
      color: #333;
    }
  }
}

.search-link {
  background: @red-dark;
  line-height: 20px;
  color: #fff;
  font-size: 18px;
  font-family: @font-family-yahei;
  padding: 12px 35px;
  height: 45px;
  *height: 35px;
  *padding: 12px 35px 0;
  .inline-block();
  .pull-right();
  i {
    margin: 0 15px 0 0;
  }
  &:hover {
    color: #fff;
    text-decoration: none;
    background: @red;
  }
}


.logo {
  .inline-block();
  float: left;
  height: 99px;
  .cdtf-logo {
    background: url('/images/tf.logo.png') no-repeat;
    width: 244px;
    height: 66px;
    display: block;
    text-indent: -9999px;
    .pull-left();
    margin: 20px 0 0 10px;
    border-right: 1px solid @gray-light;
  }
  .cdsb-logo {
    background: url('../images/sb.logo.png') no-repeat;
    width: 198px;
    height: 50px;
    display: block;
    text-indent: -9999px;
    .pull-left();
    margin: 25px 0 0 20px;
  }
}

.download-link {
  .inline-block();
  .pull-right();
  margin: 25px 0;
  min-width: 160px;
  cursor: pointer;
  p {
    display: block;
    color: @gray;
  }
  h4 {
    display: block;
    color: @gray-dark;
  }
  i {
    margin-right: 10px;
  }
}
