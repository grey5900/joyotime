    <script type="text/javascript" src="http://icd.sc/js/slide.min.js"></script>
    <script type="text/javascript">
			$(function() {
				$(".touchslider").touchSlider({
					mouseTouch : true,
				});
				$(".expand").each(function() {
					$(this).on("click", function() {
						$(this).toggleClass("on");
					});
				})
				$("#txl1").each(function() {
					$("#txl1 > dd:gt(3)").hide();
					$("#txa1").click(function() {
						$("#txs1").toggle();
						$("#txl1 > dd:gt(3)").toggle();
					});
				});
				$("#join-btn").on("click", function(){
            $.ajax({
              type:'POST',
              url:'/event/join_v2',
              data:{event_id:'{$event_id}',uid:'{$uid}',lat:'{$lat}', lng:'{$lng}'},
              dataType:'jsonp',
              cache: false,
              success:function(json){
                if(json.code == -1) {
                      window.mobile && window.mobile.login ? window.mobile.login() : alert('请先登录IN成都！');
                }else if(json.code == 0){//报名成功
                  alert('报名成功，下一步');
                  var num = new Number($("#joins_num").html());
                  num = num + 1;
                  $("#joins_num").html(num);
                }else if(json.code == 1){
                  alert('真抱歉！报名的人太多了，请稍后再试试');
                }else if(json.code == 2){
                  alert('您已经报名参与了这个活动');
                }else if(json.code == 3){
                  alert('真抱歉！这个活动已停止报名了');
                }else if(json.code == 4){
                  alert('对不起！请您先登录');
                }else{//系统错误了
                  alert('真抱歉！这个活动已停止报名了');
                }
              }
            });
          });
			})
    </script>
    <script type="text/javascript">
        function alert( message ){
          var el = $("#alerter");
          //add dom
          if (!el[0]) {
              var el = $("<div id=\"alerter\"></div>");
              $("body").append(el);
          }
          el.html(message);
              var sTop = $(document).scrollTop(),
                sHeight = $(window).height(),
                sWidth = $(window).width(),
                elHeight = el.outerHeight(),
                elWidth = el.outerWidth(),
                elTop = (sHeight - elHeight) / 2 + sTop,
                elLeft = (sWidth - elWidth) / 2;
              el.css({
                  top: elTop + 10,
                  left: elLeft,
                  opacity: '0'
              })
              .animate({
                  opacity: '1',
                  top: elTop,
                  queue: true
              }, 200)
              .delay('3000')
              .animate({
                  opacity: '0',
                  top: elTop + 10,
                  queue: true
              }, 200,
              function() {
                el.remove();
              });
        }
    </script>
  </body>
</html>