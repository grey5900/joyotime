<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>生成交易统计数据</title>
        <script src="/static/js/dwz/js/jquery-1.7.1.js" type="text/javascript"></script>
        <script type="text/javascript">
            $(function(){
                $("button").click(function(){
                    var d = $("input[name=date]").val();
                    if(d == "") {
                        alert("请输入开始日期");
                        return;
                    }
                    if(confirm("确定要提交日期[" + d + "]么？")) {
                        sumbit_generate(d);
                    }
                });
            });
            
            /**
             * 提交生成
             */
            function sumbit_generate(d) {
                $.post("{eval echo site_url(array('stat', 'deal_generate_data', 'd'))}/" + d, function(data){
                    var json = eval("(" + data + ")");
                    
                    if(json.code == 1) {
                        alert(json.message);
                        return;
                    }
                    $("#tip").html($("#tip").html() + "<br/>" + d);
                    sumbit_generate(json.date);
                });
            }
        </script>
    </head>
    <body>
        <form>
            <input type="text" name="date" />
            <button type="button">提交</button>
        </form>
        <div id="tip"></div>
    </body>
</html>