<ul class="list-reply">
	<!--{loop $list $k $v}-->
	<li>
		<a href="/user/{$v[uid]}/" class="avatar small"><i></i><img width="40" height="40" src="{$v[avatar]}" alt=""></a>
		<a href="/user/{$v[uid]}/">{$v[s_name]}</a><!-- {if !empty({$v[replyUid]})} -->回复<a href="/user/{$v[replyUid]}">{$v[r_name]}</a><!-- {/if} -->：{$v[content]}
