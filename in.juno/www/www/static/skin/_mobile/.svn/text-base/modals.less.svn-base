#messager_modal {
  position: fixed;
  z-index: 10000;
  top: 0px;
  left: 0px;
  height:100%;
  width:100%;
  background: #000;
  display: none;
}

.modal {
  width: 300px;
  padding-bottom: 2px;
  display:none;
  background: #FFF;
  .border-radius(3px);
  .box-shadow(0px 0px 4px rgba(0,0,0,0.7));
}
.modal-header {
  background: #f6f6f6;
  padding: 10px 0 9px;
  line-height: 20px;
  display: block;
  height: 20px;
  border-bottom: 1px solid #e2e2e2;
  .border-top-radius(3px);
  .buttonBackground(#f5f5f5, #f1f1f1, @text-color: #666, @textShadow: 0 1px 0 rgba(255,255,255,.8));
   h2 { 
    color: #666; 
    font-size: 1em; 
    font-weight: 700; 
    margin-bottom: 3px; 
    text-shadow: 1px 1px 0 rgba(255, 255, 255, 0.5);
    text-align: center;
  }
} 
.modal-body {
  overflow-y: auto;
  //max-height: 225px;
  margin: 10px 0;
  .modal-center {
    text-align: center;
    img {
      margin: 10px;
    }
    em {
      color: #f71111;
    }
  }
  .modal-media {
    padding: 0 0 0 10px;
    display: inline-block;
    .pull-left {
      float: left;
      display: inline-block;
      margin-right: 5px;
      img {
        display: block;
      }
    }
    .media-body {
      width: 280px;
      h3 {
        font-size: 1em;
        color: #333;
        line-height: 26px;
      }
    }
  }
  .modal-button {
    border-top: 1px solid #eee;
    margin: 8px;
    text-align: center;
    padding: 15px 0;
    p {
      text-align: left;
    }
    .button {
      display:inline-block;
      padding: 4px 0;
      margin: 10px 0 0;
      width: 220px;
      .border-radius(50px);
      .green-button();
    }
    .button-gray {
      display:inline-block;
      padding: 4px 0;
      margin: 10px 0 0;
      width: 220px;
      .border-radius(50px);
      .gray-button();
    }
  }
  p{
    color: #666;
    margin-right: 10px;
  }
  span {
    //margin: 10px 0;
    display: block;
    font-size: 0.875em;
  }
  article {
    padding: 0 10px;
    text-align: left;
  }
}  
.modal-close {
  position: absolute;
  top: 8px;
  right: 12px;
  display: block;
  width: 23px;
  height: 24px;
  background: url('/static/m_img/modal-close.png');
  background-position: 100% 50%;
  background-repeat: no-repeat;
  .background-size(23px 24px);
  z-index: 2;
}