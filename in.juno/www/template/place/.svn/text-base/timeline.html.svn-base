<div class="module map">
    <div class="tit-first"></div>
    <div class="con">

        <img src="http://api.map.baidu.com/staticimage?center={$info[longitude]},{$info[latitude]}&width=260&height=200&zoom=14&markers={$info[longitude]},{$info[latitude]}" width="260" height="200" border="0" id="place-map">
    </div>
