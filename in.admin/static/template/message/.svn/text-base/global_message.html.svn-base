<div class="pageHeader">
    <form id="pagerForm" method="post" action="{$current_url}" onsubmit="return navTabSearch(this);">
        <input type="hidden" name="pageNum" value="{$cur_page}"/>
        <input type="hidden" name="numPerPage" value="{$per_page_num}"/>
        <input type="hidden" name="orderField" value="{$order_field}"/>
        <input type="hidden" name="orderDirection" value="{$order_direction}"/>
        <div class="searchBar">
            <table class="searchContent">
                <tr>
                    <td>
                    消息内容
                    <input type="text" name="keywords" value="{$keywords}" title="消息内容" />
                    <button type="submit">
                        检索
                    </button></td>
                </tr>
            </table>
        </div>
    </form>
</div>
<div class="pageContent" id="message_feedback">
    <div class="panelBar">
        <ul class="toolBar">
            <li>
                <a class="add" target="navTab" title="发送全局消息" rel="{eval echo build_rel(array('message', 'send_global_message'))}" href="{eval echo site_url(array('message', 'send_global_message'))}"><span>发送全局消息</span></a>
            </li>
        </ul>
    </div>
    <table class="table" width="100%" layoutH="138">
        <thead>
            <tr>
                <th width="5%">ID</th>
                <th width="13%">发送时间</th>
                <th width="13%">到期时间</th>
                <th width="40%">内容</th>
                <th width="20%">连接</th>
                <th width="9%">阅读人数</th>
            </tr>
        </thead>
        <tbody>
            <!--{loop $list $row}-->
            <tr target="id" rel="{$row['id']}">
                <td>{$row['id']}</td>
                <td>{$row['createDate']}</td>
                <td>{$row['expiredDate']}</td>
                <td>{$row['content']}</td>
                <td><!--{if $row['relatedHyperLink']}-->{$row['relatedHyperLink']}<!--{else}-->无连接<!--{/if}--></td>
                <td>{eval echo $row['oldReadNum'] + $row['newReadNum']}</td>
            </tr>
            <!--{/loop}-->
        </tbody>
    </table>
    <!--{template main/page_bar}-->
</div>
