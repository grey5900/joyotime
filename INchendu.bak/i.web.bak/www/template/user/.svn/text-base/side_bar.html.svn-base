<div class="sidebar">
	<div class="header-user">
		<a href="/user/{$profile[id]}/" class="avatar large pull-left" ><img id="uAvatar" src="{eval echo image_url($profile['avatar'], 'head', 'hmdp')}" alt="{$profile[nickname]}"/></a>
		<ul>
			<li><h4><a href="/user/{$profile[id]}/">{$profile[nickname]}</a><i class="ico-approve">LV{$profile[level]}</i></h4></li>
			<li><span class="grayLight">积分：<em>{$profile[exp]}</em></span></li>
		</ul>
	</div>
	<div class="details">
