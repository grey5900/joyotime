@import "_bootstrap/variables.less";
@import "_bootstrap/mixins.less";

#container-page {
	padding: 91px 0 0;
	.container-fluid {

	}
}

.article {
    border-color: #ff7590 #e6e6e6 #e6e6e6;
    .clearfix();
	.photolist {
		margin: 20px 19px;
		width: 660px;
		.clearfix();
		.artwork {
			float: left;
			width: 530px;
			margin-right: 10px;
			background: #f1e8e3;
			position: relative;
			.imgartwork {
				width: 530px;
				height: 640px;
				overflow: hidden;
				display: table-cell;
				text-align: center;
				vertical-align: middle;
				.photo {
					position: static;
					*position: absolute;
					top: 50%;
					img {
						position: static;
						*position: relative;
						top: -50%;
						left: -50%;
						width: 530px;
					}
				}
				#detail-countdown {
					position: absolute;
					width: 100px;
					height: 40px;
					line-height: 40px;
					text-align: center;
					top: 10px;
					left: 10px;
					font-size: 20px;
					border-radius: 3px;
					background: #ffffff;
					.opacity(80);
				}
				.action-support {
					display: block;
					position: absolute;
					bottom: 20px;
					font-size: 18px;
					font-weight: bold;
					text-align: center;
					width: 120px;
					line-height: 40px;
					left: 50%;
					margin-left: -60px;
					background: #000000;
					border-radius: 3px;
					color: #ffffff;
					text-decoration: none;
					cursor: pointer;
					.opacity(80);
				}
			}
		}
		.thumb {
			float: left;
			width: 120px;
			.prev {
				background: url("pn.jpg") no-repeat scroll 0 0 transparent;
				width: 120px;
				height: 23px;
				display: inline-block;
				margin-bottom: 10px; 
			}
			.next {
				background: url("pn.jpg") no-repeat scroll  0 -23px transparent;
				width: 120px;
				height: 23px;
				display: inline-block;
			}
			ul {
				margin: 0;
				padding: 0;
			}
			li {
				margin: 0 0 10px;
				width: 120px;
				height: 120px;
				img {
					width: 120px;
					height: 120px;
				}
				a {
					display: inline-block;
					&.active {
						border: 4px solid #5bcdd5;
						width: 112px;
						height: 112px;
						img {
							width: 112px;
							height: 112px;
						}
					}
				}
				
			}
		}
	}
	.share {
		border-top: 1px solid #e8e8e8;
		margin: 0 19px;
		padding: 10px 0;
		width: 660px;
		display: inline-block;
	}
	.con {
		.babyname {
			text-align: center;
			a {
				font-weight: bold;
				color: #666;
				line-height: 18px;
			}
			p {
				color: #aaa;
			}
		}
	}
}
.comment {
	display: none;
	border: 2px solid #e9e9e9;
	margin: 0px;
	padding: 10px;
	border-radius: 6px;
	background:#fff; 
	position:relative;
	.arrow {
		_display:none;
		position:absolute;
		top:-10px;
		left:20px;
		overflow:hidden;
		display:block;
		font-size: 14px;
		.out{
			display:inline-block;
		    *display: inline;
		    *zoom: 1;
			overflow:hidden;
			color:#e1e4e5;
		}
		.inside{
			top:2px;
			color:#fbfbfb;
			left:0px;
			position:absolute;
		}
    }
	input.text {
		padding: 5px;
		line-height: 18px;
		width: 490px;
		outline: none;
		margin: 0px;
	}
	input.btn {
		margin-left: -4px;
	}
}
.module .list-mvp-post .posts .list-post li .content p {
	display: inline-block;
    *display: inline;
    *zoom: 1;
}
.module .tit h3 {
	background: url("/static/in_themes/baby/skin/channel-style.png") no-repeat scroll  0px -200px transparent;
}

#babyclock-form {
	select {
		width: 100px;
	}
}