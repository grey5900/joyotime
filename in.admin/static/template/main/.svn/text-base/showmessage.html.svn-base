<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{lang title}</title>
        <link href="/static/js/dwz/themes/css/core.css" rel="stylesheet" type="text/css" media="screen"/>
        <link href="/static/skin/common.css" rel="stylesheet" type="text/css" media="screen" />
        <script src="/static/js/dwz/js/jquery-1.7.1.js" type="text/javascript"></script>
    </head>
    <body>
        <table width="500" cellpadding="0" cellspacing="3" align="center" style="margin:50px auto;">
            <tr bgcolor="#E1E1E1">
                <td> <h1 style="margin:10px;">提示信息</h1> </td>
            </tr>
            <tr bgcolor="#EFEFEF">
                <td>
                <div style="text-align: center;">
                    <!--{if $url_forward}-->
                    <a href="{$url_forward}" style="line-height:150px;">{$message}</a>
                    <!--{else}-->
                    {$message} <!--{/if}-->
                </div></td>
            </tr>
        </table>
        <script type="text/javascript">
            $(function(){
            <!--{if $timeout > 0}-->
            setTimeout(function(){<!--{if $url_forward}-->window.location.href="{$url_forward}";<!--{else}-->history.back();<!--{/if}-->}, $timeout*1000);
            <!--{/if}-->
            });
        </script>
    </body>
</html>