#header {
	height: 98px;
	//line-height: 49px;
	//border-bottom: 2px #D63333 solid;
	background: #F5F5F5;
	position: absolute;
	top: 0px;
	left: 0px;
	right: 0px;
	z-index: 99;
	//.box-shadow(4px 0px 4px rgba(0,0,0,.2));
	.cleartype();
	.opacity(97);
    .container {
      width: 1000px;
    }
	.site-nav {
		//font-size: 16px;
		padding: 0;
		margin: 0px;
		list-style: none;
		float: left;
		position: relative;
		overflow: hidden;
		li {
			float: left;
			a {
				display: block;
				line-height: 51px;
				padding: 0 9px;
				position: relative;
				z-index: 10;
				text-decoration: none;
                &:hover,
                &:active {
                  color: #000;
                }
			}
			&.logo {
				margin-right: 20px;
				a {
					display: block;
					float: left;
					margin: 6px 0 0;
					padding: 0px;
					width: 123px;
					height: 36px;
					text-indent: -9999px;
					overflow: hidden;
					background: url('logo.png') 0px 0px no-repeat;
				}
			}
			&.on {
			}
			&.back {
	            z-index: 8;
	            height: 47px;
	            border-bottom: 4px solid #D63333;
	            position: absolute;
				bottom: 0px;
			}
		}
	}
	.site-nav-more {
		float: left;
		position: relative;
		.dropdown-toggle {
			display: block;
			width: 16px;
			height: 16px;
			margin: 18px 0 0 5px;
			text-indent: -9999px;
			overflow: hidden;
			background: url('header_more.png') 0px 0px no-repeat;
		}
		.dropdown-menu {
			background: #ffffff;
			border-color: #d9d9d9;
			li {
				a{
					&:hover,
					&:focus {
						color: #000000;
						background: #f0f0f0;
					}
				}
			}
		}
	}
	.user-nav {
		//padding-top: 14px;
		float: right;
		margin-left:10px;
		.avatar {
			float: left;
			*margin-top: 10px; 
			img {
				width: 30px;
				height: 30px;
				border-radius: 3px;
			}
		}
		.person {
			float: left;
			_padding-right: 0;
			position: relative;
			max-width: 90px;
			//height: 51px;
			//line-height: 51px;
			.name {
				padding: 0 10px;
				//height: 51px;
				//line-height: 51px;
				max-width: 90px;
				display: inline-block;
				.ie7-inline-block();
				white-space: nowrap;
				text-overflow: ellipsis;
				overflow: hidden;
			}
			.setting,
			.exit {
				width: 20px;
				height: 20px;
				display: block;
				vertical-align: middle;
				margin: 10px 10px 0;
				background: url('ico.png') no-repeat;
				position: relative;
				text-indent: -9999px;
			}
			.setting {
				background-position: right -128px;
			}
			.exit {
				background-image: url('ico.png') no-repeat;
				background-position: right -151px;
			}
			.sin {
				margin: 0 10px;
			}
		}
	}
}
#header{
	.container{width:1000px;}
	.top-nav{
		height:36px;
		line-height:36px;
		.user-nav{
			a{
				color:@default-theme;
			}
		}
		.more-nav{
			float:right;
			a{margin-left:10px;}
		}
	}
	.site-nav{float:left;}
	.sub-nav{
		height:68px;
		line-height:59px;
		background:url(sb_nav.png) repeat-x;
		width:100%;
		.site-nav{
			a{font-size:18px;
				color:#fff;
				//margin-left:15px;
				padding:0 10px;
				display:block;
				float:left;
				position:relative;
				span{
					position:absolute;
					display:block;
					top:2px;
					width:100%;
					text-align:center;
					left:0;
					display:none;
					line-height:0;
				}
				i{
					display:inline-block;
					width:0;
					height:0;
					border-style:solid;
					border-color:#fff transparent;
					border-width:7px 4px 0 4px;
				}
				&.current{
					background:url(nav_crt_hover.png) repeat-x;
					span{display:block;}
				}
				&:hover{
					text-decoration:none;
					background-image:url(nav_crt.png);
					span{
						display:block;
					}
				}
			}
		}
		.search-nav{
			float:right;
			background:url(search.png) no-repeat;
			width:261px;
			line-height:25px;
			font-size:12px;
			margin-top:20px;
			input{
				border:none;
				padding:0;
				margin:0;
				background:none;
				line-height:25px;
			}
			.txt{
				height:25px;
				width:210px;
				min-height:25px;
				*width:180px;
				_width:180px;
				padding-left:30px;
				float:left;
			}
			.smt{
				font-family:microsoft yahei;
				width:50px;
				height:25px;
				float:right;
				text-align:center;
			}
			
		}
		&.affix{top:0;}
	}
}

body{
	padding-top:36px;
}
