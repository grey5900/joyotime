                }else if(json.code == 2){
                  alert('您已经报名参与了这个活动');
                }else if(json.code == 3){
                  alert('真抱歉！这个活动已停止报名了');
                }else if(json.code == 4){
                  alert('对不起！请您先登录');
                }else{//系统错误了
