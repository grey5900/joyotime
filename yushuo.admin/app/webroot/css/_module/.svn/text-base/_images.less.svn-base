[class^="icon-"],
[class*=" icon-"] {
  display: inline-block;
  width: 30px;
  height: 30px;
  line-height: 32px;
  vertical-align: middle;
  background-image: url("/img/icons.png");
  background-position: 30px 30px;
  background-repeat: no-repeat;
  margin-top: 1px;
}

