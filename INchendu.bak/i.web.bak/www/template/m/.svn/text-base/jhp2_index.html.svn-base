          $(this).on("click", function() {
            $(this).toggleClass("on");
          });
        });
        $(".touchslider").touchSlider({
          mouseTouch : true,
        });
        var settime;
        $(".scrolling").hover(function() {
          clearInterval(settime);
        }, function() {
          settime = setInterval(function() {
            //wtf
            var fst = $(".scrolling ul:first");
            var height = fst.find("li:first").outerHeight();
            fst.animate({
              "marginTop" : -height + "px"
            }, 600, function() {
              fst.css({
                marginTop : 0
              }).find("li:first").appendTo(fst);
            });
          }, 3000);
        }).trigger("mouseleave");

      })
