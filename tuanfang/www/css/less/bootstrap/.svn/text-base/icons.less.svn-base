.icons(@x,@y){
  background:url('/images/icons.png') no-repeat @x @y;
  .inline-block();
}

i{
  &.icon-search{
    .icons(-4px,-53px);
    width: 20px;
    height: 20px;
    vertical-align: middle;
  }
  &.icon-iphone {
    .icons(0,0);
    width: 30px;
    height: 40px;
    vertical-align: middle;
  }
  &.icon-money {
    .icons(-5px,-84px);
    width: 16px;
    height: 16px;
  }
  &.icon-time {
    .icons(-5px,-114px);
    vertical-align: middle;
    width: 16px;
    height: 16px;
  }
  &.icon-view-map {
    .icons(-1px,-166px);
    width: 11px;
    height: 11px;
  }
}
.arrow {
  background-image: url('/images/icon.arrow.png');
  background-position: 100% 50%;
  background-repeat: no-repeat;
  .background-size(7px 12px);
  display: block;
}
