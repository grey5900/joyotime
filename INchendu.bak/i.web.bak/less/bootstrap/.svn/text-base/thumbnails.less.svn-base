// THUMBNAILS
// ----------
// Note: `.thumbnails` and `.thumbnails > li` are overriden in responsive files

// Make wrapper ul behave like the grid
.thumbnails {
	list-style: none;
	margin: 0 0 0 -12px;
	padding-bottom: 40px;
	.clearfix();
}
// Fluid rows have no left margin
.row-fluid .thumbnails {
  margin-left: 0;
}

// Float li to make thumbnails appear in a row
.thumbnails > li {
  float: left; // Explicity set the float since we don't require .span* classes
}
.thumbnail {
	float: left;
	margin: 0 0 12px 12px;
	width: 200px;
	width: 198px ~"\9";
	display: block;
	padding: 18px;
	.boxer();
	&:hover {
		.box-shadow( 0px 1px 3px rgba(0,0,0,.2));
	}
	.photo {
		position: relative;
		width: 200px;
		img {
			width: 200px;
			display: block;
		}
		&.cut {
			height: 800px;
			overflow: hidden;
			.shadow {
				position: absolute;
				left: 0px;
				bottom: -1px;
				width: 100%;
				height: 20px;
				background: url(/img/long_image_shadow.png) 0px 0px repeat-y;
			}
		}
	}
	.caption {
		color: @gray;
		padding: 9px 0;
		width: 100%;
		overflow: hidden;
		word-wrap: break-word;
		word-break: break-all;
		i {
			font-size: 24px;
			line-height: 14px;
			vertical-align: bottom;
			color: #666;
		}
	}
	.user {
		.clearfix();
	}
	.avatar {
		float: left;
		margin: 0 10px 10px 0;
	}
	.detail {
		color: @grayLight;
		width: 150px;
		width: 148px ~"\9";
		overflow: hidden;
		float: left;
	}
	.actions {
		clear: both;
		border-top: 1px dotted @grayLighter;
		padding-top: 5px;
		margin-top: 5px;
		
		.praise {
			float: right;
			cursor: pointer;
			display: inline-block;
			.ie7-inline-block();
			width: 20px;
			height: 20px;
			text-indent: -9999px;
			background: url(/img/icon_praise.png) 0px 0px no-repeat;
			&:hover {
				background-position: 0px -20px;
			}
			&:active {
				background-position: 0px -40px;
			}
		}
		.praised {
			float: right;
			display: inline-block;
			width: 20px;
			height: 20px;
			text-indent: -9999px;
			background: url(/img/icon_praise.png) 0px -40px no-repeat;
		}
		
		.more {
			color: @grayLight;
			line-height: 20px;
			a {
				.blueLink();
			}
			.favorite {
				cursor: pointer;
			}
			.favorited {
				color: @grayLight;
				cursor: default;
				text-decoration: none;
			}
		}
	}
}

// Add a hover state for linked versions only
#infscr-loading {
	position: absolute;
	bottom: 0px;
	left: 50%;
	width: 300px;
	text-align: center;
	margin-left: -144px; //fix left -12px margin
}
