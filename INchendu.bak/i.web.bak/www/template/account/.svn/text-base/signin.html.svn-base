<!--{template web/header}-->

<div class="container" id="container">
			<div class="block">
				<div class="block-header"><h2>登录IN成都</h2></div>
				<div class="block-content">
					<div class="main">
						<form action="/signin/" method="post" class="form-horizontal" id="signin-form">
							<div class="alert alert-error hide">帐号或密码错误</div>
							<div class="control-group">
								<label class="control-label" for="username">帐号：</label>
								<div class="controls">
									<input type="text" name="username" value="" id="username" size="20" placeholder="用户名或邮箱" />
								</div>
							</div>
							<div class="control-group">
								<label class="control-label" for="password">密码：</label>
								<div class="controls">
									<input type="password" name="password" value="" id="password" size="20" placeholder="密码" />
								</div>
							</div>
							<div class="control-group">
								<div class="controls">
									<label class="checkbox inline"><input type="checkbox" name="auto_login" value="1" id="auto_login"/> 记住我</label>
								</div>
							</div>
							<div class="form-actions">
								<input type="submit" class="btn btn-primary btn-large" data-loading-text="　……　" value="　登录　" /> <a href="/reset_pwd/">忘记密码？</a>
							</div>
						</form>
					</div>
					<div class="sidebar">
						<div class="guide">
							<h4>没有IN成都帐号？</h4>
							<p><a href="/signup/" class="btn btn-large btn-success"><span>马上注册帐号</span></a></p>
							<h4>用其他平台帐号登录</h4>
							
							<p><a href="{$api_uri}oauth/login?stage_code=0&is_redirect=1"><img border="0" src="/img/btn_weibo.png" width="124" height="24" alt="用微博帐号登录" /></a><br /><br />
							<a href="{$api_uri}oauth/login?stage_code=1&is_redirect=1"><img border="0" src="/img/btn_qq.png" width="124" height="24" alt="用QQ帐号登录" /></a></p>
						</div>
					</div>
				</div>
				<div class="block-footer"></div>
			</div>
		</div>
<!--{template web/footer}-->