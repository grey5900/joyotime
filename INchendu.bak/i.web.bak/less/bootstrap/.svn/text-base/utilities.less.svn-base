hr.divider {
	border: none;
	border-bottom: 2px solid #e8ecde;
	clear: both;
	.clearfix;
}
.notification {
	width: 760px;
	margin: 15px auto;
	.notification-header {
		line-height: 44px;
		border-bottom: 4px solid #5e6264;
		padding: 0 0 15px;
		.clearfix();
		h1 {
			float: left;
			a {
				display: block;
				width: 135px;
				height: 44px;
				text-indent: -9999px;
				overflow: hidden;
				background: url(/img/logo_mini.png) 0px 0px no-repeat;
				*background: url(/img/logo_mini.gif) 0px 0px no-repeat;
			}
		}
		h3 {
			font-weight: bold;
			line-height: 44px;
			margin-left: 10px;
			float: left;
		}
		.user_online {
			float: right;
			li {
				line-height: 44px;
				display: inline;
				margin-right: 5px;
			}
		}
	}
	.notification-body {
		border: 1px solid #e7e7e7;
		background: #ffffff;
		padding: 30px;
		margin: 30px 20px;
		.op {
			border-top: 8px solid #f0f0f0;
			margin-top: 20px;
			padding-top: 20px;
			text-align: center;
		}
	}
	.notification-footer {
		line-height: 40px;
		border-top: 1px solid #c1c1c1;
		.clearfix();
		.links {
			float: left;
			a {
				margin: 0px 5px;
			}
		}
		.copyright {
			font-family: Arial,sans-serif;
			float: right;
		}
	}
}

.item-qrcode {
 	display: inline-block;
 	.ie7-inline-block();
 	background: url(/img/icon_qrcode.png) center center no-repeat;
	width: 17px;
	height: 17px;
	text-indent: -9999px;
	overflow: hidden;
	border: 1px solid #f0f0f0;
	border-right: 1px solid #e1e1e1;
	border-bottom: 1px solid #e1e1e1;
	&:hover {
		border: 1px solid #e1e1e1;
	}
}
.qr-popover {
 	.thumb {
 		text-align: center;
 	}
}

#messager {
	min-width: 200px;
	max-width: 300px;
	_width: 200px;
	padding: 20px 15px;
	line-height: 20px;
	overflow: hidden;
	position: absolute;
	z-index: 9999;
	text-align: center;
	font-size: 12px;
	font-weight: bold;
	background-color: @white;
	border: 1px solid rgba(0,0,0,.2);
	border: 1px solid #666 ~"\9";
	.border-radius(3px);
	.box-shadow(0 1px 3px rgba(0,0,0,.3));
	.opacity(0);
}

#signin-modal {
	width: 460px;
	margin-left: -230px;
	.modal-header {
	}
	.modal-body {
		.control-group {
			margin-bottom: 5px;
			.controls {
				padding-left: 20px;
				padding-right: 20px;
				margin-left: 0px;
			}
		}
		.form-actions {
			padding: 0px 20px;
			text-align: right;
			.tips {
				display: inline-block;
				line-height: 18px;
				color: @grayLight;
				float: left;
				text-align: left;
			}
			.checkbox {
				margin-right: 10px;
			}
		}
		#username,
		#password,
		#verifycode {
			display: block;
			width: 410px;
			height: 26px;
			line-height: 26px;
			padding-top: 6px;
			padding-bottom: 6px;
			font-size: 18px;
			font-weight: bold;
			background: #f9f9f9;
			color: @black;
			.border-radius(0);
		}
		#password {
		//	width: 210px;
		}
		#verifycode {
		//	width: 100px;
		}
	}
	.modal-footer {}
}