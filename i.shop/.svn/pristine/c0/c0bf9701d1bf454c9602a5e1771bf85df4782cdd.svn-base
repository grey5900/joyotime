@import "main.less";
@import "footer.less";

body{
	background: #394556 url(../img/login_bg.jpg) 0px 0px repeat;
}
.container{
	background: #394556 url(../img/login_con_bg.jpg) 0px 0px no-repeat;
	min-height: 699px;
	.login{
		margin-top: 118px;
	}
}
.span6{
	margin: 0;
	.logo{
		margin:66px 0 0 113px;
	}
}
.span6{
	margin: 0;
	.form-horizontal{
		margin-top:54px;
		.controls{
			margin:0;
		}
		.form-actions{
			padding: 0;
			label{
				color:#717e91;
				margin-left:60px;
			}
			a{
				color:#c4ccd7;
				padding-left:5px;
			}
		}
	}
}
input[type="text"],
input[type="password"]{
	background: transparent url(../img/ipt_login.png) 0px -53px no-repeat;
	height: 41px;
	.ie7-inline-block ();
	line-height: 41px;
	width: 280px;
	border:0 none;
	box-shadow: none;
	border-radius:0;
	color: #717e91;
	display: hidden;
	font: 18px "Microsoft YaHei",@baseFontFamily;
	padding: 5px 10px;
	*line-height: 41px;
	line-height:50px\0;
	margin: 0;
	&:focus{
		background: transparent url(../img/ipt_login.png) 0px 0px no-repeat;
		color: #3b4658;
		border:0 none;
		box-shadow: none;
		border-radius:0;
	}	
}
#footer{
	position: fixed;
	bottom: 0;
}