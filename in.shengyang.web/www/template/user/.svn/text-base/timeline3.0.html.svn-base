<script type="text/javascript">
	$(function(){
		
		$('.timeline-nav').affix({
	          offset: {
	            top: $('.timeline-nav').offset().top
	          , bottom: 210
	          }
	        });
	  			//关注的人
	  			$.getJSON('/user_get_friends/{$info[id]}?'+new Date().getTime(), function(json){
	  				var dom = $('#follows');
	  				for(var i=0;i<json.length;i++){
	  					var item = json[i];
	  					var i_img = $('<img />').attr('src', item.avatar);
	  					if(json.nickname != '')
	  						i_img.attr('title', item.nickname);
	  					else
	  						i_img.attr('alt', item.username);
	  					var i_a = $('<a></a>').attr('href', '/user/'+item.id).append(i_img);
	  					$('<li></li>').append(i_a).appendTo(dom);
	  				}
	  			});
	  			//关注我的人
	  			$.getJSON('/user_get_friends/{$info[id]}/1?'+new Date().getTime(), function(json){
	  				var dom = $('#be_follows');
	  				for(var i=0;i<json.length;i++){
	  					var item = json[i];
	  					var i_img = $('<img />').attr('src', item.avatar);
	  					if(json.nickname != '')
	  						i_img.attr('title', item.nickname);
	  					else
	  						i_img.attr('alt', item.username);
	  					var i_a = $('<a></a>').attr('href', '/user/'+item.id).append(i_img);
	  					$('<li></li>').append(i_a).appendTo(dom);
	  				}
	  			});
	});
	var cData = ["BC9F78","A5CD84","C1CF8A"];
	var forbid;
	$('.user_tags li').each(function(i,n){
		var num = Math.floor(Math.random()*3);
		while(num == forbid){
			num = Math.floor(Math.random()*3);
		}
		forbid = num;
		n.style.backgroundColor = "#" + cData[num];
	});
</script>
