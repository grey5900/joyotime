/* card */
dl.card {
    margin: auto auto 10px;
    width: 99%;
}
dl.card dt {
    padding: 0px 10px;
    height: 25px;
    overflow: hidden;
}
dl.card dt li {
    position: relative;
    float: left;
    margin-left: -1px;
    list-style: none;
    height: 25px;
}
dl.card dt a {
    float: left;
    height: 14px;
    line-height: 14px;
    overflow: hidden;
    display: block;
    margin: 1px auto auto auto;
    padding: 4px 10px 3px 10px;
    border: 1px solid #ccc;
    color: #369;
    background: #fff;
}
dl.card dt a.active {
    margin: 0px auto auto auto;
    padding: 4px 10px;
    border-color: #ccc #ccc #f9f9f9 #ccc;
    background: #f9f9f9;
    font-weight: bold;
}
dl.card dd {
    margin: -2px;
    padding: 10px;
    border: 1px solid #ccc;
    background: #f9f9f9;
}
dl.card dd ul, dl.card dd ol {
    list-style: none;
}
#list_source, #list_save {
    overflow: auto;
}
#list_source li, #list_save li {
    padding: 0px;
    margin: 0px;
}
#list_source li a, #list_save li a {
    display: block;
    zoom: 1;
    text-decoration: none;
    line-height: 25px;
    cursor: default;
}
#list_source a:after, #list_save a:after {
    content: "";
    display: block;
    clear: both;
}
#list_source li .open, #list_save li .open {
    float: right;
    width: 20px;
    height: 20px;
    overflow: hidden;
    background: url(openlink.gif) no-repeat;
    margin: 2px 0px 3px 0px;
    cursor: pointer;
    visibility: hidden;
}
#list_source .selected .open, #list_save .selected .open {
    visibility: visible;
}
#list_source li .img, #list_save li .img {
    display: block;
    float: left;
    padding: 5px 0px 5px 5px;
}
#list_source li .img img, #list_source li .img embed, #list_save li .img img, #list_save li .img embed {
    width: 90px;
    height: 60px;
    background: #f0f0f0;
    border: 1px solid #909090;
}
#list_source li .title, #list_save li .title {
    display: block;
    padding: 0px 10px;
    height: 25px;
    line-height: 25px;
    font-weight: bold;
    overflow: hidden;
}
#list_source li .desc, #list_save li .desc {
    display: block;
    padding: 0px 10px;
    height: 50px;
    line-height: 25px;
    overflow: hidden;
}
#list_source .selected, #list_save .selected {
}
#list_source .selected a, #list_save .selected a {
    color: #fff;
    background: #006;
}
#news_savedcount, #news_maxcount {
    color: #090;
    font-weight: bold;
}
#selector_overlay {
    position: absolute;
    top: 0px;
    left: 0px;
    width: 100%;
    height: 500px;
    background: #333;
    opacity: 0.7;
    filter: alpha(opacity=70);
}
#selector_iframe {
    position: absolute;
    padding: 10px;
    background: #fff;
    border: 2px inset;
}
#editor_overlay {
    position: absolute;
    top: 0px;
    left: 0px;
    width: 100%;
    height: 500px;
    background: #333;
    opacity: 0.7;
    filter: alpha(opacity=70);
}
#editor_form {
    position: absolute;
    padding: 5px;
    background: #fff;
    border: 2px inset;
}
#editor_form table {
    border-spacing: 2px;
}
#editor_form input, #editor_form select, #editor_form img {
    vertical-align:middle;
}

.btn_silver{
