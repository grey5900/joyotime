<form id="pagerForm" method="post" action="{$current_page}">
	<input type="hidden" name="pageNum" value="1" />
	<input type="hidden" name="numPerPage" value="{$numPerPage}" />
	<input type="hidden" name="orderField" value="<!--{{param.orderField}}-->" />
	<input type="hidden" name="orderDirection" value="<!--{{param.orderDirection}}-->" />
</form>

<div class="pageHeader">
	<form rel="pagerForm" onsubmit="return navTabSearch(this);" action="{$current_url}" method="post">
	<div class="searchBar">
		<ul class="searchContent">
			<li style="width:50px;">
				<label>搜索：</label>
				
			</li>
			<li>
			<input type="text" name="keywords" value="{$keywords}"/>
			</li>
			<li style="width:50px;"><label>分类：</label></li>
			<li><select name="newsCatId">
			<option value='0'>所有分类</option>
			{$category}
			</select></li>
			{if $status!=2}<li style="width:auto"><label>状态：</label>
				<input type="radio" name="status" value=0 <!--{if $status===0 || $status==='0'}-->checked="checked"<!--{/if}--> />未发布
				<input type="radio" name="status" value=1 <!--{if $status==1}-->checked="checked"<!--{/if}--> />发布
				<!-- <input type="radio" name="status" value=2 {if $status==2}checked="checked"{/if} />删除</li> -->
			{/if}
			
		</ul>
		
		<div class="subBar">
			<ul>
				<li><div class="buttonActive"><div class="buttonContent"><button type="submit">检索</button></div></div></li>
				<!-- li><a class="button" href="demo_page6.html" target="dialog" mask="true" title="查询框"><span>高级检索</span></a></li -->
			</ul>
		</div>
	</div>
	</form>
</div>
<div class="pageContent">
	<div class="panelBar">
		<ul class="toolBar">
		{if $status!=2}
			<li><a class="add" href="news/add_news" target="navTab" rel="{eval echo build_rel(array('news', 'add_news'))}"><span>添加</span></a></li>
			<li><a title="确实要删除这些记录吗?" target="selectedTodo" rel="ids" postType="string" href="news/delthem_news" class="delete"><span>批量删除</span></a></li>
			<li><a class="edit" href="news/add_news/id/<!--{{id}}-->" target="navTab" warn="请选择一条新闻"  rel="{eval echo build_rel(array('news', 'add_news'))}"><span>修改</span></a>
		{/if}
			<li><a class="edit" href="news/news_status" title="删除和不显示的内容将会显示/显示的内容将变成不显示。" postType="string" target="selectedTodo"   rel="ids"><span>批量修改状态</span></a></li>
			<li class="line">line</li>
			
		</ul>
	</div>
	<table class="table" width="1200" layoutH="138">
		<thead>
			<tr>
				<th width="22"><input type="checkbox" group="ids" class="checkboxCtrl"></th>
				<th width="20" >ID</th>
				<th width="80" >标题</th>
				<th width="40" >新闻类型</th>
				<th width="10" >状态</th>
				<th width="30" >分类</th>
				<th width="40" >浏览次数</th>
				<th width="30" >创建日期</th>
				{if $status!=2}<th width="30">操作</th>{/if}
			</tr>
		</thead>
		<tbody>
		<!--{loop $list $k $v}-->
			<tr target="id" rel="{$v['id']}">
				<td><input name="ids" value="{$v['id']}" type="checkbox"></td>
				<td>{$v['id']}</td>
				<td><a href="{if $v['linkuri']}{$v['linkuri']}{else}{$website}/article/{$v['id']}{/if}" target="_blank">{$v['subject']}</a></td>
				<td>{eval echo $v['newsType']==0 ? "文字" : ($v['newsType']==1 ?"图片" : "外链");}</td>
				<td>{eval echo $v['status']==0 ? "未发布":( $v['status']==1 ? "发布" : "删除" )}</td>
				<td>{$v['cate']}</td>
				<td>{$v['hitCount']}</td>
				<td>{eval echo date('Y-m-d H:i', $v[dateline]);}</td>
				{if $status!=2}
				<td>
					<a title="删除" target="ajaxTodo" href="news/delete_news/id/{$v['id']}" class="btnDel">删除</a>
					<a title="编辑" target="navTab" href="news/add_news/id/{$v['id']}" class="btnEdit">编辑</a>
				</td>
				{/if}
			</tr>
		<!--{/loop}-->
			
			
		</tbody>
	</table>
	
	<!--{template main/page_bar}-->
	
</div>
