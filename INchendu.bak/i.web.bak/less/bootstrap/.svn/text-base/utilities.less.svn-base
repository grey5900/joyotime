// UTILITY CLASSES
// ---------------

// Quick floats
.pull-right {
  clear: right;
  float: right;
}
.pull-left {
  float: left;
}

// Toggling content
.hide {
  display: none;
}
.show {
  display: block;
}

// Visibility
.invisible {
  visibility: hidden;
}

.warn {
	color: #c00;
}
.num {
	color: @grayLight;
}

.avatar {
	display: inline-block;
	.ie7-inline-block();
	width: 50px;
	height: 50px;
	text-align: center;
	text-decoration: none;
	position: relative;
	img {
		width: 50px;
		height: 50px;
	}
	i {
		display: none;
		position: absolute;
		width: 24px;
		height: 24px;
		top: -6px;
		right: -6px;
		background: #f00 url(/img/mask_avatar.png) -206px 0px no-repeat;
	}
	&.small {
		width: 40px;
		height: 40px;
		img {
			width: 40px;
			height: 40px;
			.border-radius(4px);
		}
		i {
			height: 12px;
			width: 12px;
			top: -3px;
			right: -3px;
			background-position: -256px 0;
		}
	}
	&.middle {
		width: 50px;
		height: 50px;
		img {
			width: 50px;
			height: 50px;
			.border-radius(5px);
		}
		i {
			height: 16px;
			width: 16px;
			top: -4px;
			right: -4px;
			background-position: -206px 0;
		}
	}
	&.xmiddle {
		width: 60px;
		height: 60px;
	    img {
			width: 60px;
			height: 60px;
			.border-radius(6px);
	    }
	    i {
			height: 20px;
			width: 20px;
			top: -5px;
			right: -5px;
			background-position: -146px 0;
	    }
	}
	&.large {
		width: 70px;
		height: 70px;
		img {
			width: 70px;
			height: 70px;
			.border-radius(7px);
		}
		i {
			width: 24px;
			height: 24px;
			top: -6px;
			right: -6px;
			background-position: -76px 0;
		}
	}
	&.xlarge {
		width: 76px;
		height: 76px;
		img {
			width: 76px;
			height: 76px;
			.border-radius(8px);
		}
		i {
			width: 24px;
			height: 24px;
			top: -6px;
			right: -6px;
			background-position: 0 0;
		}
	}
}
