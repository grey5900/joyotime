.footer {
  width: 100%;
  height: 221px;
  border-top: 1px solid @gray-light;
  background: #fff;
  display: block;
}

.footer-social {
  height: 110px;
  border-bottom: 1px solid @gray-light;
  padding: 20px 80px;
  li {
    float: left;
    height: 70px;
    display: inline;
    width: 270px;
  }
  .ms {
    border-right: 1px solid @gray-light; 
    border-left: 1px solid @gray-light;
    h4 {
      line-height: 48px;
    }
  }
}

.footer-nav {
  margin: 20px 0 10px;
  text-align: center;
  a {
    margin: 0 5px;
    color: @red-dark;
    font-family: @font-family-yahei;
    &:hover {
      color: @red-dark;
    }
  }
}

.footer-copyright {
  text-align: center;
  color: @gray;
  p {
    margin: 10px 0;
  }
}

.social {
  display: block;
  padding: 15px 40px 0;
  .pull-left {
    width: 50px;
    margin-right: 10px;
    display: block; 
  }
  .social-body {
    display: block;
    margin-left: 60px;
  }
  h4 {
    font-size: 16px;
    color: @gray-lighter;
  }
  p {
    color: @gray;
    line-height: 28px;
  }
}

