{eval $page_rel='enewspaper_published';}
<form id="pagerForm" method="post" action="{$current_url}">
    <input type="hidden" name="pageNum" value="{$cur_page}"/>
    <input type="hidden" name="numPerPage" value="{$per_page_num}"/>
    <input type="hidden" name="keywords" value="{$keywords}"/>
</form>
<div class="pageHeader">
    <form rel="pagerForm" method="post" action="{$current_url}" onsubmit="return divSearch(this, '{$page_rel}');">
        <div class="searchBar">
            <table class="searchContent">
                <tr>
                    <td>
                    <input type="text" name="keywords" value="{$keywords}" />
                    <button type="submit">
                        检索
                    </button></td>
                </tr>
            </table>
        </div>
    </form>
</div>
<div class="pageContent">
    <div class="panelBar">
        <ul class="toolBar">
            <li>
                <a class="edit" target="navTab" warn="请选择需要修改的手机报" title="编辑手机报" rel="{echo build_rel(array('enewspaper', 'add'))}" href="{echo site_url(array('enewspaper', 'edit', 'id'))}/<!--{{id}}-->"><span>编辑</span></a>
            </li>
            <li>
                <a class="delete" target="ajaxTodo" warn="请选择需要删除的手机报" title="你确定要删除，亲？" href="{echo site_url(array('enewspaper', 'del', 'id'))}/<!--{{id}}-->"><span>删除</span></a>
            </li>
        </ul>
    </div>
    <table width="100%" class="table" layoutH="158" rel="{$page_rel}">
        <thead>
            <tr>
                <th width="5%">ID</th>
                <th width="15%">标题</th>
                <th width="20%">发布时间</th>
                <th width="15%">操作</th>
            </tr>
        </thead>
        <tbody>
            <!--{loop $list $row}-->
            <tr target="id" rel="{$row['id']}">
				<td>{$row['id']}</td>
                <td>{$row['subject']}</td>
                <td>{$row['publishDate']}</td>
                <td><a href="/www/enewspaper/{$row['id']}" target="_blank">查看</a></td>
            </tr>
            <!--{/loop}-->
        </tbody>
    </table>
    <!--{template main/page_bar}-->
</div>